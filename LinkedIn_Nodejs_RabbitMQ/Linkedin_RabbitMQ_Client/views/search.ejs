  <script>
  function searchController($scope,$http,$location) {
        $scope.searchMember = function() {		
        alert("called");
        
			alert($scope.inputSearch);	
			$http({	    			 
		            method: 'GET',
		            url: '/search/'+$scope.inputSearch		                   		           
